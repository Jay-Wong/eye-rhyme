<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F0F0F0">
    <RelativeLayout
        android:id="@+id/theater_poster"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/theater_img">
        <ImageButton
            android:id="@+id/back_to_theater_list"
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:background="@mipmap/left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp" />

        <ImageView
            android:id="@+id/like_this_theater"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="fitXY"
            android:background="@mipmap/not_like"
            android:layout_marginRight="27dp"
            android:layout_marginEnd="27dp"
            android:layout_alignTop="@+id/back_to_theater_list"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#90000000"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:text="影院"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="9dp"
                android:id="@+id/theater_name_in_detail_page" />
            <ImageView
                android:id="@+id/star_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:background="@mipmap/unstar"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/theater_name_in_detail_page"
                android:layout_alignLeft="@+id/theater_name_in_detail_page"
                android:layout_alignStart="@+id/theater_name_in_detail_page" />
            <ImageView
                android:id="@+id/star_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:background="@mipmap/unstar"
                android:layout_alignTop="@+id/star_1"
                android:layout_toRightOf="@+id/star_1"
                android:layout_toEndOf="@+id/star_1" />
            <ImageView
                android:id="@+id/star_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:background="@mipmap/unstar"
                android:layout_alignTop="@+id/star_2"
                android:layout_toRightOf="@+id/star_2"
                android:layout_toEndOf="@+id/star_2" />
            <ImageView
                android:id="@+id/star_4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:background="@mipmap/unstar"
                android:layout_alignTop="@+id/star_3"
                android:layout_toRightOf="@+id/star_3"
                android:layout_toEndOf="@+id/star_3" />
            <ImageView
                android:id="@+id/star_5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="fitXY"
                android:background="@mipmap/unstar"
                android:layout_alignTop="@+id/star_4"
                android:layout_toRightOf="@+id/star_4"
                android:layout_toEndOf="@+id/star_4" />

            <TextView
                android:id="@+id/theater_score_in_detail_page"
                android:text="10.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EE7600"
                android:textSize="20dp"
                android:textStyle="italic"
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@+id/star_5"
                android:layout_toRightOf="@+id/star_5"
                android:layout_toEndOf="@+id/star_5" />
            <TextView
                android:id="@+id/assess_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_alignBottom="@+id/theater_score_in_detail_page"
                android:layout_toRightOf="@+id/theater_score_in_detail_page"
                android:layout_toEndOf="@+id/theater_score_in_detail_page" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/address_in_detail_page"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/loc_icon_in_detail_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:background="@mipmap/location_icon"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="位置"
            android:id="@+id/theater_address_in_detail_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14dp"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/loc_icon_in_detail_page"
            android:layout_toEndOf="@+id/loc_icon_in_detail_page" />

        <TextView
            android:text="666m"
            android:id="@+id/distance_in_detail_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/theater_address_in_detail_page"
            android:layout_alignLeft="@+id/theater_address_in_detail_page"
            android:layout_alignStart="@+id/theater_address_in_detail_page" />

        <ImageView
            android:id="@+id/location_forward_in_detail_page"
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:background="@mipmap/forward_icon"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/phone_call_in_detail_page"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/phone_call_icon_in_detail_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:background="@mipmap/phone_call"
            android:layout_marginLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="12345678"
            android:id="@+id/phone_number_in_detail_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/phone_call_icon_in_detail_page"
            android:layout_toEndOf="@+id/phone_call_icon_in_detail_page" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:scaleType="fitXY"
            android:background="@mipmap/forward_icon"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>